<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:layout_height="match_parent"
    android:background="#370440"
    tools:context=".ChatActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:layout_alignParentLeft="true"
                android:layout_height="30dp"
                android:id="@+id/toolbarBack"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/toolbarFriend"
                android:src="@drawable/boy_three"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/toolbarName"
                android:id="@+id/toolBarOnline"
                android:src="@drawable/user_ofline"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarName"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="User"
                android:layout_gravity = "center"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_below="@id/toolBar"
        android:layout_above="@id/typeMessageLayout"
        android:id="@+id/recyclerViewMessageList"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/typeMessageLayout"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="#370440"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/messageTypeTextView"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/typemessagebox"
                    android:hint="Write your message"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingRight="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/sendButton"
                    app:layout_constraintLeft_toRightOf="@id/attachmentButton"
                    app:layout_constraintRight_toLeftOf="@id/sendButton"
                    app:layout_constraintStart_toEndOf="@+id/attachmentButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/sendButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_send_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                     />

                <ImageView
                    android:id="@+id/attachmentButton"
                    android:layout_width="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_attach_file_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:layout_editor_absoluteX="16dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</RelativeLayout>