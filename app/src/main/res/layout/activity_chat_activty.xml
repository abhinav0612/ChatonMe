<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/typeMessageLayout"
        android:id="@+id/recyclerViewMessageList"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/typeMessageLayout"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <EditText
            android:layout_width="200dp"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/attachmentButton"
            android:background="@drawable/typemessagebox"
            android:id="@+id/messageTypeTextView"
            android:hint="Write your message"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/messageTypeTextView"
            android:src="@drawable/ic_send_black_24dp"
            android:id="@+id/sendButton"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/attachmentButton"

            />

    </RelativeLayout>



</RelativeLayout>